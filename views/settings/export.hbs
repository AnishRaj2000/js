<div class="content">
	<section class="export">
		<div class="buttons">
			<div class="button">
				<span>Backup profile</span>
			</div>
		</div>
		<p class="progress">This process can take a while.</p>
	</section>

	<section class="import">
		<form>
			<input type="file" name="file">
			<div class="buttons">
				<div class="button">
					<input type="submit" class="button" value="Restore profile">
				</div>
			</div>
		</form>
		<p class="progress">
			This will merge the notes/boards in the backup with the current
			profile.
		</p>
	</section>
</div>
