<input type="text" name="title" value="{{space.title}}" placeholder="{{t 'Space title'}}">
<p class="color">
	<label>
		<input type="color" name="color" value="{{color}}" class="needsclick">
		{{t 'Select the color for this space'}}
	</label>
</p>

{{#unless is_new}}
	<div class="delete">
		<p>
			{{#if last_space}}
				<span class="last">
					{{t 'This is your last space, and cannot be deleted.'}}
				</span>
			{{else}}
				{{#if shared}}
					<a href="#leave" rel="leave">{{t 'Leave this space &raquo;'}}</a>
				{{else}}
					<a href="#delete" rel="delete">{{t 'Delete this space &raquo;'}}</a>
				{{/if}}
			{{/if}}
		</p>
	</div>
{{/unless}}

