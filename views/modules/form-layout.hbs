<div class="{{formclass}} clear interface">
	<form class="standard-form">
		{{{content}}}
		{{#if buttons}}
			<div class="button-row clear">
				<div class="button flat cancel">
					<span>Cancel</span>
				</div>
				<div class="button flat submit">
					<input type="submit" {{#if tabindex}}tabindex="{{tabindex}}"{{/if}} value="{{action}}">
				</div>
			</div>
		{{/if}}
	</form>
</div>

