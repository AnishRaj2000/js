<div class="{{formclass}} clear interface">
	<form class="standard-form">
		{{{content}}}
		{{#if buttons}}
			<div class="button-row clear">
				<div class="button submit">
					<span>{{action}}</span>
				</div>
				<div class="button cancel">
					<span>Cancel</span>
				</div>
			</div>
		{{/if}}
		<input type="submit" value="submit" style="display:none;">
	</form>
</div>

